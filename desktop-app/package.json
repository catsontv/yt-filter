{
  "name": "youtube-monitor",
  "version": "1.0.0",
  "description": "YouTube Monitor Desktop App for Parents",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "build": {
